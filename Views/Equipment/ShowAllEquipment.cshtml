<div class="containerOfPages">

    @foreach (var item in @ViewBag.Equipment)
    {

        {

            <div class="card">
                <img class="img" src=" @item.Image" />
                <h5>  @item.Company</h5>
                <div class="contentBx">
                    <div class="size">
                        <h6> @item.Model</h6>
                        <h6> @item.Price</h6>
                        <h6> @item.Amount</h6>
                        <div class="color">
                            <h5 class="sale"> Sale </h5>
                        </div>
                    </div>
                </div>
            </div>


        }

    }
</div>