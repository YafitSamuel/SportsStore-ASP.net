@using SportsStore.Models;
<link href="@Url.Content("~/Content/StyleSheet1.css")" rel="stylesheet" type="text/css" />
<div class="containerOfPages">
    @foreach (SportsEquipment item in @ViewBag.Basketball)
    {
        if (@item.SportType == "Basketball")
        {

            <div class="card">
                <img class="img" src=" @item.Image" />
                <h5>  @item.Company</h5>
                <div class="contentBx">
                    <div class="size">
                        <h6> @item.SportType</h6>
                        <h6> @item.Price</h6>
                        
                        <div class="color">

                        </div>
                    </div>
                </div>
            </div>


        }
        else
        {

            <span></span>

        }
    }
</div>
